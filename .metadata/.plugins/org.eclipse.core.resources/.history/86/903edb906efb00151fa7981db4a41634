#include <Arduino.h>
#include <Wire.h>

#include "BH1750.h"

#define TRIGGER 12
#define ECHO    13

extern "C" {
#include "user_interface.h"
}

BH1750 lightMeter;

ADC_MODE(ADC_VCC);

int voltage;

void setup() {
	//system_update_cpu_freq(80);
	system_update_cpu_freq(160);

	pinMode(2, INPUT);
	pinMode(TRIGGER, OUTPUT);
	pinMode(ECHO, INPUT);
	pinMode(BUILTIN_LED, OUTPUT);

	delay(100);
	Serial.begin(115200);
	delay(100);
	Serial.println(system_get_os_print());
	Serial.println(system_rtc_clock_cali_proc());
	Serial.println(system_get_rtc_time());
	Serial.println(system_get_sdk_version());
	Serial.println(system_get_time());

	Serial.println("Serial started");

	Serial.print(ESP.getFreeHeap(),DEC);
	Serial.print("\t");
	Serial.println("Free Heap");

	Serial.print(ESP.getChipId(),DEC);
	Serial.print("\t");
	Serial.println("Chip ID");

	Serial.print(ESP.getFlashChipId(),DEC);
	Serial.print("\t");
	Serial.println("Flash Chip ID");

	Serial.print(ESP.getFlashChipSize(),DEC);
	Serial.print("\t");
	Serial.println("Flash Chip size");

	Serial.print(ESP.getFlashChipSpeed(),DEC);
	Serial.print("\t");
	Serial.println("Flash Chip speed");

	voltage = ESP.getVcc();

	Serial.print(voltage/1000,DEC);
	Serial.print(".");
	Serial.print(voltage%1000,DEC);
	Serial.print("\t");
	Serial.println("Vcc");

	lightMeter.begin();
	delay(1000);
	Serial.println("Light Meter started");
	delay(1000);
}

void loop() {
	int lux = lightMeter.readLightLevel();
	char buf[50];
	sprintf(buf, "%05d", lux);
	Serial.print(buf);
	Serial.print(" lx");
	Serial.print(" | ");
	voltage = ESP.getVcc();
	Serial.print(voltage/1000,DEC);
	Serial.print(".");
	Serial.print(voltage%1000,DEC);
	Serial.print("Vcc");
	Serial.print(" | ");
	Serial.print(ESP.getFreeHeap(),DEC);
	Serial.print(" Free Heap");
	Serial.print(" | ");
	Serial.print(digitalRead(2),DEC);
	Serial.print(" Proximity sensor");
	Serial.print(" | ");


	long duration, distance;
	digitalWrite(TRIGGER, LOW);
	delayMicroseconds(2);

	digitalWrite(TRIGGER, HIGH);
	delayMicroseconds(10);

	digitalWrite(TRIGGER, LOW);
	duration = pulseIn(ECHO, HIGH);
	distance = (duration/2) / 29.1;
	sprintf(buf, "%02d.%02d", distance/100, distance%100);
	Serial.print(buf);
	Serial.println(" cm");

	delay(1000);
}
